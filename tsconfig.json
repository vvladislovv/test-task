{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",  
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,             // Разрешает неявные any
    "strictNullChecks": false,          // Отключает проверки null/undefined
    "strictFunctionTypes": false,       // Отключает строгую проверку функций
    "strictBindCallApply": false,       // Отключает строгую проверку bind/call/apply
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],  
  "exclude": ["node_modules", "dist"]
}
